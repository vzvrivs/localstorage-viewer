{
  "manifest_version": 3,
  "name": "LocalStorage Master Explorer",
  "version": "1.1.3",
  "description": "Explorer, éditer et exporter le localStorage de tous les domaines ouverts.",
  "icons": {
    "16": "icons/favicon-96x96.png",
    "48": "icons/favicon-96x96.png",
    "96": "icons/favicon-96x96.png",
    "128": "icons/web-app-manifest-192x192.png" 
  },
  "action": {
    "default_title": "Storage Master Explorer",
    "default_icon": {
      "16": "icons/favicon-96x96.png",
      "32": "icons/web-app-manifest-192x192.png",
      "48": "icons/favicon-96x96.png",
      "128": "icons/web-app-manifest-512x512.png"
    },
    "default_popup": "popup.html"
  }, 
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Ouvrir l’explorateur",
    "default_popup": "popup.html"
  }
}
